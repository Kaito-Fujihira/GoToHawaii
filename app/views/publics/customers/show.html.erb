<div class="container">
	<div class="customer-show">
	<h2><%= @customer.name %>さんの会員情報</h2>
	<div class="row">
		<div class="col-xs-3">
	    <table class="table">
	    	<tr><!--%= attachment_image_tag(customer, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>--></tr>
				<tr>
					<th>お名前</th>
					<th><%= @customer.name %></th>
				</tr>
				<tr>
					<th>お住いの地域</th>
					<th><%= @customer.country %></th>
				</tr>
				<tr>
					<th>ハワイへの渡航歴</th>
					<th><%= @customer.visit_time %></th>
				</tr>
				<tr>
    			<th>フォロー</th>
    			<th>
    				<%= link_to @customer.followings.count, customer_followings_path(@customer) %>
    			</th>
  			</tr>
  			<tr>
   				<th>フォロワー</th>
    			<th class="followers-count">
    				<%= link_to @customer.followers.count, customer_followers_path(@customer) %>
    			</th>
  			</tr>
			</table>
			<div class="follow-btn">
				<%= render 'publics/relationships/follow_form', customer: @customer %>
			</div>
			<br>
			<%= link_to "マイページを編集する", edit_customer_path(current_customer.id), class: "btn btn-primary"%>
			<%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn-square-so-pop" %>
		</div>

		<% if @posts.exists? %>
		<div class="col-xs-9">
			<h3><%= @customer.name %>さんが投稿した写真</h3>
			<div class="posts-index-all">
	  		<% @posts.each do |post| %>
	    		<%= attachment_image_tag post, :image, class: "img", fallback: "no-image.png", size:"200x200" %>
	    	<% end %>
			</div>
			<div class="paginate">
				<%= paginate @posts %>
			</div>
		</div>
		<% else %>
		<div class="col-xs-9">
			<h3><%= @customer.name %>さんが投稿した写真</h3>
			<p>投稿した写真はまだありません...</p>
		</div>
		<% end %>
	</div>
</div