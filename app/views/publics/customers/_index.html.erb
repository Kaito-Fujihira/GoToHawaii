<% if customers.exists? %>
  <div class="follow-index">
  <table class="table">
    <thead>
      <tr>
        <th>プロフィール写真</th>
        <th>お名前</th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% customers.each do |customer| %>
        <tr>
          <td><%= attachment_image_tag customer, :profile_image, size:"50x50", fallback: "no-image.png" %></td>
          <td><%= customer.name %></td>
          <td id="followings_<%= customer.id %>"><%= customer.followings.count %></td>
          <td id="followers_<%= customer.id %>"><%= customer.followers.count %></td>
          <td id="follow_<%= customer.id %>">
            <%= render "publics/relationships/follow_form", customer: customer %>
          </td>
          <td><%= link_to "詳細をみる", customer_path(customer), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>プロフィール写真</th>
        <th>お名前</th>
        <th>フォロー数</th>
        <th>フォロワー数</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>
  <p>ユーザーはいません...</p>
<% end %>