<% if @customers.exists? %>
<table class='table table-bordered'>
  <thead>
    <tr>
      <th>プロフィール写真</th>
      <th>お名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><!--%= attachment_image_tag(customer, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>--></td>
        <td><%= customer.name %></td>
        <td>フォロー数: <%= customer.followings.count %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td id="follow_<%= customer.id %>">
          <%= render 'publics/relationships/follow_form', customer: customer %>
        </td>
        <td><%= link_to '詳細をみる', customer_path(customer), class: "customer_#{customer.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table class='table'>
  <thead>
    <tr>
      <th>プロフィール写真</th>
      <th>お名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>ユーザーはいません。</td>
      </tr>
  </tbody>
</table>
<% end %>