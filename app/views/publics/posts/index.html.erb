<div class="container">
<h2>投稿一覧</h2>
<div class="posts-index-all">
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
    <%= attachment_image_tag post, :image, class: "img", fallback: "no-image.png", size:"300x300" %>
    <% end %>
    <div class="post-title">
        <%= post.title %>
    </div>
    <div id="post_<%= post.id %>">
        <%= render "publics/favorites/favorite-btn", post: post %>
    </div>
    <% end %>
</div>
</div>
