<div class="container">
<h2>投稿詳細</h2>
<div class="row">
    <div class="col-xs-6">
		<%= attachment_image_tag @post, :image, class: "img", fallback: "no-image.png", size:"500x500" %>
    </div>

    <div class="col-xs-6">
      <h4>タイトル</h4>
      <div class="item-form">
        <%= @post.title %>
      </div>

      <h4>説明</h4>
      <div class="item-explanation">
        <%= @post.explanation %>
      </div>

      <h4>ジャンル</h4>
      <div class="item-genre">
        <%= @post.genre.name %>
      </div>
      <% if @customer == current_customer %>
      <%= link_to "投稿を編集する", edit_post_path, class: "btn btn-primary"%>
      <%= link_to "投稿を削除する", post_path, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
  <%= render "publics/comments/comment", customer: @customer, post: @post, comment: @comment %>
</div>