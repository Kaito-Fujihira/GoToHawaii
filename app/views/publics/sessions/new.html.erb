<div class="container">
<div class="sessions-customer">
<h2>ログイン</h2>
<div class="sessions-customer-form">
<%= form_with model: @customer, url: new_customer_session_path, class: "form", local: true do |f| %>
  <dt>メールアドレス</dt>
  <dd>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registations-under" %>
  </dd>

  <dt>パスワード(6文字以上)</dt>
  <dd>
    <%= f.password_field :password, autocomplete: "new-password", class: "registations-under" %>
  </dd>

  <div class="login-btn">
    <%= f.submit "ログイン", class: "btn btn-success btn-lg" %>
  </div>

  <%= render "publics/shared/links" %>

  <%= link_to "企業様ログイン(閲覧用)", customers_guest_sign_in_path, method: :post, class: "btn btn-warning btn-lg" %>
<% end %>

</div>
</div>
</div>