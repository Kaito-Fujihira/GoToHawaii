<h2>ログイン</h2>
<!--%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>-->
<%= form_with model: @customer, url: new_customer_session_path, local: true do |f| %>
  <dt>メールアドレス</dt>
  <dd>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "registations-under" %>
  </dd>

  <dt>パスワード(6文字以上)</dt>
  <dd>
    <%= f.password_field :password, autocomplete: "new-password", class: "registations-under" %>
  </dd>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "publics/shared/links" %>
