<% @page_title = "パスワード再設定" %>
<div class="container">
  <div class="customer-password-new">
    <h2>パスワード再設定</h2>
    <div class="password-new-form">
      <%= form_with model: @customer, url: password_path(resource_name), class: "form", local: true do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>
      
        <div class="mandatory">*は必須項目です</div>
        
        <dt>メールアドレス<span class="text-danger">*</span></dt>
        <dd><%= f.email_field :email, autofocus: true, autocomplete: "email" %></dd>

        <dd><%= f.submit "メールアドレスにパスワード変更フォームを送る", class: "btn btn-success" %></dd>

      <% end %>
    </div>
  </div>
</div>
