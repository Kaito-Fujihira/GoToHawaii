<div class="container">
  <div class="edit-registrations-customers">
    <h2>パスワード変更</h2>
    <div class="edit-registrations-customers-form">
      <%= form_with model: @customer, url: customer_registration_path, class: "form", local: true do |f| %>
        <!--%= render "customers/shared/error_messages", resource: resource %>-->

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <dt>現在のパスワード</dt>
        <dd><%= f.password_field :current_password, autocomplete: "current-password" %></dd>

        <dt>新しいパスワード(6文字以上)</dt>
        <dd><%= f.password_field :password, autocomplete: "new-password" %></dd>

        <dt>新しいパスワード(確認用)</dt>
        <dd><%= f.password_field :password_confirmation, autocomplete: "new-password" %></dd>

        <div class="actions">
          <%= f.submit "更新する", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
