<% @page_title = "管理者側 パスワード再設定" %>
<div class="container">
  <div class="admin-password-new">
    <h2>パスワード再設定</h2>
    <div class="password-new-form">
      <%= form_with model: @admin, url: password_path(resource_name), class: "form", local: true do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

        <dt>メールアドレス</dt>
        <dd><%= f.email_field :email, autofocus: true, autocomplete: "email" %></dd>

        <dd><%= f.submit "メールアドレスにパスワード変更フォームを送る", class: "btn btn-success" %></dd>

      <% end %>
    </div>
  </div>
</div>
