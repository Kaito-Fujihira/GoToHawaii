<% @page_title = "管理者側 投稿詳細" %>
<div class="container">
  <h2>投稿詳細</h2>
  <div class="row">
    
    <div class="col-xs-7">
		  <%= attachment_image_tag @post, :image, class: "img", fallback: "no-image.png", size:"600x500" %>
    </div>

    <div class="col-xs-5">
      <div class="post-show-info">
        
        <dt>投稿者</dt>
        <dd><%= @post.customer.name %>　さん</dd>
  
        <dt>タイトル</dt>
        <dd><%= @post.title %></dd>
  
        <dt>説明</dt>
        <dd><%= Rinku.auto_link(@post.explanation, :all, 'target="_blank"').html_safe %></dd>
  
        <dt>ジャンル</dt>
        <dd><%= @post.genre.name %></dd>
        
        <dt>いいね数</dt>
        <dd><%= @post.favorites.count %> 件</dd>
        
        <dt>不適切なコンテンツを検出する<span style="color:red;">＊</span></dt>
        <dd>
          <div class="tag-box">
            <% @post.tags.each do |tag| %>
              <span class="label"><%= tag.name %></span>
            <% end %>
          </div>
        </dd>
    
        <% if @post.spot.address.present? %>
          <dt>位置情報名</dt>
        <% end %>
  
        <%= link_to "投稿を編集する", edit_admins_post_path(@post), class: "btn btn-success" %>
        <%= link_to "投稿を削除する", admins_post_path, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>

      </div>
    </div>
  </div>