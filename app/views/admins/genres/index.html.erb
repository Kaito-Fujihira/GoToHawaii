<h2>カテゴリー一覧</h1>
<div class="row">
    <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
    <div class="genre-container">
      <dt>カテゴリー名</dt>
      <dd><%= f.text_field :name, class: "form-control" %></dd>
      <dd><%= f.submit "カテゴリーを追加する", class: "btn btn-primary" %></dd>
      </div>
    <% end %>

    <table class="table table-hover table-inverse" style = "width: 600px; margin-top: 30px;">
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-primary" %>
          <%= link_to "削除する", admins_genre_path(genre), method: :delete, class: "btn btn-danger"%>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>