<% @page_title = "管理者側 ジャンル一覧" %>
<div class="container">
  <div class="genre-container">
  <h2>ジャンル一覧</h1>
  <div class="row">
    <div class="genre-index">
      <%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
      <%= render "layouts/errors", obj: @genre %>
        <dt>ジャンル名追加</dt>
        <dd><%= f.text_field :name %></dd>
        <dd><%= f.submit "追加する", class: "btn btn-success" %></dd>
      <% end %>
    </div>

      <div class="genre-table">
      <table class="table" style = "width: 600px; margin-top: 30px;">
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td style="width:40%;"><%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %>
            <%= link_to "削除する", admins_genre_path(genre), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>